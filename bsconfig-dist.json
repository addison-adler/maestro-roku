{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "!**/*.spec.*",
    "meta/**/*.*",
    "meta/*.*",
    "images/**/*.*",
    "images/*.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingDir": "dist",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*"
    }
  ],
  "emitDefinitions": true,
  "plugins": ["maestro-roku-bsc-plugin"],
  "sourceMap": false,
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos-roku/**/*"]
  }
}
