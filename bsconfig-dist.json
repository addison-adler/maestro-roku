{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "!**/*.spec.*",
    "meta/**/*.*",
    "meta/*.*",
    "images/**/*.*",
    "images/*.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingDir": "dist",
  "diagnosticFilters": [
    {
      "src": "**/rooibos/**/*.*"
    },
    {
      "src": "**/rooibos/*.*"
    },
    1001,
    {
      "src": "**/*spec.bs",
      "codes": ["LINT3011"]
    },
    {
      "src": "**/*spec.bs"
    },
    {
      "src": "../src-ml-test-app/**/RALETracker*.*"
    },
    {
      "src": "**/roku_modules/**/*.*"
    },
    {
      "src": "source/ml/**/*.*"
    },
    {
      "src": "source/ml/*.*"
    }
  ],
  "emitDefinitions": true,
  "sourceMap": false,
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos-roku/**/*"]
  }
}
