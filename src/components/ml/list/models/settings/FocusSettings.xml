<?xml version='1.0' encoding='utf-8'?>
<component
    name='ml_FocusSettings'
    extends='ContentNode'>
  <interface>
    <field
        id='animSpeeds'
        type='floatarray'
        value='[0.1,0.05, 0.02]' />
    <!-- fixed|floating -->
    <field
        id='horizAnimStyle'
        type='string'
        value='fixed' />

    <field
        id='canLongPress'
        type='boolean'
        value='true' />

    <!-- fixed|floating -->
    <field
        id='vertAnimStyle'
        type='string'
        value='fixed' />

    <!-- onTop|underneath|none -->
    <field
        id='feedbackStyle'
        type='string'
        value='onTop' />
    <field
        id='feedbackUri'
        type='string'
        value='pkg:/images/input-focusrect.9.png' />
    <field
        id='feedbackColor'
        type='string'
        value='#ffffff' />
    <!-- offset the left, right, top, bottom of the focus rect -->
    <field
        id='feedbackOffsets'
        type='floatarray'
        value='[0,0,0,0]' />
  </interface>
</component>